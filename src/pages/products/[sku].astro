---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const products = await getCollection('products');

  return products.map(product => ({
    params: { sku: product.id },
    props: { product },
  }));
}

const { product } = Astro.props;
const { name, category, description, available, images, createdAt } = product.data;
---

<BaseLayout title={`${name} - R. Present`} description={description}>
  <article class="product-detail">
    <a href={`/categories/${category}`} class="back-link">&larr; Back to {category}</a>

    <div class="product-layout">
      <div class="product-images">
        <div class="main-image">
          <img src={images[0]} alt={name} />
          {!available && <span class="sold-badge">Sold</span>}
        </div>

        {images.length > 1 && (
          <div class="thumbnail-grid">
            {images.map((image, index) => (
              <img src={image} alt={`${name} view ${index + 1}`} class="thumbnail" />
            ))}
          </div>
        )}
      </div>

      <div class="product-info">
        <h1>{name}</h1>
        <p class="category">Category: <a href={`/categories/${category}`}>{category}</a></p>

        <div class="description">
          <h2>Description</h2>
          <p>{description}</p>
        </div>

        <div class="availability">
          {available ? (
            <p class="available">
              <strong>Available</strong> - Find us at an <a href="/markets">upcoming market</a>
            </p>
          ) : (
            <p class="sold-out">
              <strong>Sold</strong>
            </p>
          )}
        </div>

        <div class="meta">
          <p class="created-date">
            Created: {new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'long', day: 'numeric' }).format(createdAt)}
          </p>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .product-detail {
    max-width: 1200px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    color: #666;
    text-decoration: none;
    margin-bottom: 2rem;
    text-transform: capitalize;
  }

  .back-link:hover {
    color: #333;
  }

  .product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .product-images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .main-image {
    position: relative;
    aspect-ratio: 1;
    background: #f5f5f5;
    border-radius: 8px;
    overflow: hidden;
  }

  .main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sold-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: bold;
  }

  .thumbnail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 0.5rem;
  }

  .thumbnail {
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: 4px;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .thumbnail:hover {
    border-color: #333;
  }

  .product-info h1 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
  }

  .category {
    color: #666;
    margin: 0 0 2rem 0;
    text-transform: capitalize;
  }

  .category a {
    color: #333;
    text-decoration: none;
  }

  .category a:hover {
    text-decoration: underline;
  }

  .description {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .description h2 {
    font-size: 1.25rem;
    margin: 0 0 1rem 0;
  }

  .description p {
    line-height: 1.6;
    color: #444;
    margin: 0;
  }

  .availability {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .available {
    color: #2d5f2e;
    margin: 0;
  }

  .available a {
    color: #2d5f2e;
    text-decoration: underline;
  }

  .sold-out {
    color: #666;
    margin: 0;
  }

  .meta {
    color: #888;
    font-size: 0.875rem;
  }

  .meta p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .product-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .product-info h1 {
      font-size: 2rem;
    }
  }
</style>
